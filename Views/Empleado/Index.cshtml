@{
}
<html>
    <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    </head>
    <body>
        Carnet: @ViewBag.ci  <br>
        Nombre: @ViewBag.nombre  <br>
        Casado: @ViewBag.casado  <br>
        Estatura: @ViewBag.estatura  <br>
        Fecha de contrato: @ViewBag.fecha_contratacion.ToString("dd/MM/yyyy") <br>

        <div class="container">
            <div class="row">
            <div class="col-4">
            </div>
                <div class="col-4">
                    <table class="table table-primary">
                        <tr>
                            <td>CI</td>
                            <td>@ViewBag.empleado.ci</td>
                        </tr>
                        <tr>
                            <td>Nombre</td>
                            <td>@ViewBag.empleado.nombre</td>
                        </tr>
                        <tr>
                            <td>Estatura</td>
                            <td>@ViewBag.empleado.estatura</td>
                        </tr>
                        <tr>
                            <td>Peso</td>
                            <td>@ViewBag.empleado.peso</td>
                        </tr>
                    <tr>
                        <td>Foto</td>
                        <td><img src="~/imagenes/@ViewBag.empleado.foto" width="100px" height="100px"></td>
                    </tr>
                    <tr>
                        <td>Indice Masa corporal</td>
                        <td>@(ViewBag.empleado.peso / (ViewBag.empleado.estatura * ViewBag.empleado.estatura))</td>
                    </tr>
                    </table>
                </div>
            </div>
            <div class="row">
            <div class="col-2">
            </div>
                <div class="col-8">
                    <table class="table table-success">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Estatura</th>
                            <th>Peso</th>
                            <th>Foto</th>
                            <th>Indice masa corporal</th>
                        </tr>
                        @foreach (var emp in ViewBag.empleados)
                        {
                            <tr>
                                <td>@emp.ci</td>
                                <td>@emp.nombre</td>
                                <td>@emp.estatura</td>
                                <td>@emp.peso</td>
                                <td><img src="~/imagenes/@emp.foto" width="50px" height="50px"></td>
                                <td>@(emp.peso / (emp.estatura * emp.estatura))</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    </body>
</html>