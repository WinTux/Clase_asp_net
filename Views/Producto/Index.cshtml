@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<a class="btn btn-success" asp-controller="Producto" asp-action="Agregar">Agregar nuevo producto</a>
<table border="1" class="table table-warning">
    <tr>
        <th>ID</th>
        <th>NOMBRE</th>
        <th>PRECIO</th>
        <th>FOTO</th>
        <th>Acciones</th>
    </tr>
    @foreach(var p in ViewBag.productos)
    {
        
        <tr>
            <td>@p.id</td>
            <td>@p.nombre</td>
            <td>@p.precio</td>
            <td><img src="~/imagenes/@p.foto" height="100"></td>
            <td><a asp-controller="Producto" asp-action="Modificar" asp-route-id="@p.id">Modificar</a></td>
        </tr>
    }

</table>
