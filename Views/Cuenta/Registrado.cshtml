<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-8">
                <h3>Detalles de registro</h3>
                
                    <table class="table">
                        <tr>
                            <td></td>
                            <td>
                            @foreach(var foto in ViewBag.cuenta.fotos)
                            {
                                <img src="~/imagenes/@foto" width="100"><br >
                            }
                        </td>
                        </tr>
                        <tr>
                            <td>Usuario</td>
                            <td>
                                @ViewBag.cuenta.usuario
                            </td>
                        </tr>
                        <tr>
                            <td>Password</td>
                            <td>
                            @ViewBag.cuenta.password
                            </td>
                        </tr>
                        <tr>
                            <td>Descripción</td>
                            <td>
                            <textarea cols="30" rows="5">@ViewBag.cuenta.descripcion</textarea>
                            </td>
                        </tr>
                        <tr>
                            <td>Disponible</td>
                            <td>
                            @ViewBag.cuenta.disponible
                            </td>
                        </tr>
                        <tr>
                            <td>Genero</td>
                            <td>
                            @ViewBag.cuenta.genero
                            </td>
                        </tr>
                        <tr>
                            <td>Lenguajes de progamamción</td>
                            <td>
                            @foreach (var len in ViewBag.cuenta.lenguajes)
                                {
                                    <p class="lead">@len</p>
                                    <br>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Cargo</td>
                            <td>
                            @ViewBag.cuenta.cargo
                            </td>
                        </tr>
                        <tr>
                            <td>ID</td>
                        <td>@ViewBag.cuenta.id</td>
                        </tr>
                    </table>
                
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>