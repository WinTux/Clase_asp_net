<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <h3 class="d-5"> Lista de productos en el carrito</h3>
    <div class="container"> 
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <table class="table table-success">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <th>Opciones</th>
                    </tr>
                    @foreach (var item in ViewBag.carrito)
                    {
                        <tr>
                            <td>@item.producto.id</td>
                            <td>@item.producto.nombre</td>
                            <td>@item.producto.precio</td>
                            <td>
                                <img src="~/imagenes/@item.producto.foto" height="50px" width="50px">
                            </td>
                            <td>@item.cantidad</td>
                            <td>@(item.producto.precio * item.cantidad)</td>
                            <td>
                                <a asp-controller="Carrito" asp-action="EliminarItem" asp-route-id="@item.producto.id">Quitar del carrito</a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="5" align="right">Total:</td>
                        <td colspan="2" align="left">@ViewBag.total</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>